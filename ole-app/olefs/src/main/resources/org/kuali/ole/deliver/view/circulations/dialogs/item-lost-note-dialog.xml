<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">


    <!--Lost Item-->
    <bean id="itemLostNoteDialog" parent="Uif-DialogGroup">
        <property name="header.rightGroup">
            <ref bean="headerBtnAndInstructionalTextMsgLostItm"/>
        </property>
        <property name="promptText" value=""/>
        <property name="availableResponses">
            <list>
                <!--Empty-->
            </list>
        </property>
        <property name="items">
            <list merge="false">
                <ref bean="itemLost-note"/>
                <ref bean="itemLostNote-buttons"/>
            </list>
        </property>
    </bean>

    <bean id="headerBtnAndInstructionalTextMsgLostItm" p:style="width:95%;position:relative;float:right" parent="Uif-HeaderRightGroup">
        <property name="items">
            <list>
                <bean parent="Uif-HeaderThree"  p:headerText="Item Lost"/>
                <bean parent="Uif-Message" p:style="margin-top:15px;float:right" p:messageText="*indicates required field"/>
            </list>
        </property>
    </bean>

    <bean id="itemLost-note" parent="itemLost-note-parentBean" />
    <bean id="itemLost-note-parentBean" parent="Uif-VerticalBoxSection">
        <property name="items">
            <list>
                <bean id="itemLostNote" parent="Loan-Uif-InputField" p:label="Note" p:required="true" p:propertyName="itemLostNote">
                    <property name="control">
                        <bean parent="Uif-TextAreaControl" p:rows="5" p:cols="70" p:maxLength="400" />
                    </property>
                </bean>
            </list>
        </property>
    </bean>


    <bean id="itemLostNote-buttons" p:style="position: relative;float:left;top:1%;left: 50%;margin-right: -50%;transform: translate(-50%, 0%);justify-content: center;align-items: center;" parent="Uif-HorizontalBoxSection">
        <property name="items">
            <list>
                <bean id="itemLostNoteButton" parent="Uif-SecondaryActionButton" p:actionLabel="Submit"
                      p:actionScript="if(jq('#kualiLightboxForm').valid()){
                          var itemLostDescription = jq('#itemLostNote_control').val();
                          submitForm('applyItemLost', {itemLostDescription:itemLostDescription}, null, true,
                          function () {
                              jq.fancybox.close();
                              jq('#checkoutItem_control').focus();
                              jq('.loanedItemCBClass').removeAttr('checked');
                              jq('.loaningItemCBClass').removeAttr('checked');
                          });
                      }"/>
                <bean id="itemLostCloseButton" parent="Uif-SecondaryActionButton" p:actionScript="
                jq.fancybox.close();
                jq('#checkoutItem_control').focus();
                jq('.loanedItemCBClass').removeAttr('checked');
                jq('.loaningItemCBClass').removeAttr('checked');"  p:actionLabel="Cancel" />


            </list>
        </property>
    </bean>
</beans>

